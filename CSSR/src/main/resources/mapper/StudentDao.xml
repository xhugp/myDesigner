<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xhu.dao.StudentDao">
    <select id="queryAll" resultType="com.xhu.entity.Student">
        SELECT stu_id,stu_name,pxh,create_time,last_update_time
        FROM Student
        ORDER BY pxh
        DESC
    </select>
    <select id="queryById" resultType="com.xhu.entity.Student">
        SELECT stu_id,stu_name,pxh,create_time,last_update_time
        FROM Student
        WHERE stu_id = #{stuId}
    </select>

    <insert id="insertStudent" useGeneratedKeys="true"
            keyProperty="stuId" keyColumn="stu_id" parameterType="com.xhu.entity.Student">
        INSERT INTO
        Student( stu_name,pxh,create_time,last_update_time )
        VALUES
        (#{stuName},#{pxh},#{createTime},#{lastUpdateTime})
    </insert>
    
    <update id="updateStudent" parameterType="com.xhu.entity.Student">
        UPDATE Student
        <set>
            <if test="stuName!=null">stu_name = #{stuName},</if>
            <if test="pxh!=null">pxh = #{pxh},</if>
            <if test="lastUpdateTime!=null">last_update_time = #{lastUpdateTime}</if>
        </set>
        WHERE stu_id = #{stuId}
    </update>

    <delete id="deleteById">
        DELETE FROM
        Student
        WHERE
        stu_id = #{stuId}
    </delete>

</mapper>