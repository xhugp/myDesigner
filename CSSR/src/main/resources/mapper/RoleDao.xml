<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xhu.dao.RoleDao">
    <select id="list" resultType="com.xhu.entity.Role">
        SELECT *
        FROM role
    </select>

    <insert id="add" parameterType="com.xhu.entity.Role">
        INSERT INTO role(name)
        VALUES (#{name})
    </insert>

    <delete id="delete">
        DELETE FROM role
        WHERE id = #{id}
    </delete>
</mapper>