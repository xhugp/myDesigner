<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xhu.dao.RtypeDao">
    <select id="list" resultType="com.xhu.entity.Rtype">
        SELECT *
        FROM rtype
    </select>

    <select id="getName" resultType="java.lang.String">
        SELECT name
        FROM rtype
        WHERE id = #{id}
    </select>

    <insert id="add" parameterType="com.xhu.entity.Rtype">
        INSERT INTO rtype(name)
        VALUES (#{name})
    </insert>

    <delete id="delete">
        DELETE FROM rtype
        WHERE id = #{id}
    </delete>
</mapper>